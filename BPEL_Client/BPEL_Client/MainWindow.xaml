<Window x:Class="BPEL_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="250" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0">
            <Label>CORRELATION</Label>
            <TextBox Name="INPUT_BOX">1</TextBox>
            <Button Name="GO_BUTTON" Click="GO_BUTTON_Click"  Width="100">Go</Button>
            <TextBlock Name="OUTPUT_BOX"></TextBlock>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Label>NO CORRELATION</Label>
            <TextBox Name="INPUT_BOX_2">1</TextBox>
            <Button Name="GO_BUTTON_2" Click="GO_BUTTON_2_Click" Width="100">Go</Button>
            <TextBlock Name="OUTPUT_BOX_2"></TextBlock>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="1">
            <Label>LOAN TEST</Label>
            <TextBox Name="INPUT_BOX_NAME">TOM</TextBox>
            <TextBox Name="INPUT_BOX_LOAN">100</TextBox>
            <Button Name="GO_BUTTON_3"  Width="100" Click="GO_BUTTON_3_Click">Go</Button>
            <TextBlock Name="OUTPUT_BOX_LOAN"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
