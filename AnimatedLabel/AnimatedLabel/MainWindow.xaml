<Window x:Class="AnimatedLabel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="262" />
            <ColumnDefinition Width="262" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="175" />
            <RowDefinition Height="175" />
        </Grid.RowDefinitions>
        <Button Content="Button" Grid.Column="0" Grid.Row="0" Height="23" Name="button1" Width="75" Click="button1_Click" />
        <Button Content="Button" Grid.Column="0" Grid.Row="1" Height="23" Name="button2" Width="75" Click="button2_Click" />
        <Label Content="Label" Grid.Column="1" Grid.Row="0" Height="28" Name="label1" Width="100" BorderBrush="Black" BorderThickness="2"/>
        <Label Content="Label" Grid.Column="1" Grid.Row="1" Height="28" Name="label2" Width="100" BorderBrush="Black" BorderThickness="2"/>
    </Grid>
</Window>
